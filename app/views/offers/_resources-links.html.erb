<% if local_assigns[:resources] %>
  <section id="<%= local_assigns[:html_id] %>">
    <div class="container pb-8">
      <div class="px-4 sm:px-0 mt-10 mb-6 font-bold text-center">
        <%= local_assigns[:title] %>
      </div>
      <div align="center" class="w-full justify-center content-center">
      <div class="px-4 sm:px-0 mt-10 mb-6 w-2/3 text-center">
        <p>The resources below may be useful for local non-profit organizations and community volunteers to gain access to funding and support for projects to promote community health and help us end the COVID-19 pandemic.</p>
      </div>
      </div>
      <br><br>

      <div class="mx-4 sm:mx-0 grid grid-cols-1 sm:grid-cols-2 gap-4 lg:col-gap-12">
        <% local_assigns[:resources].each do |link| %>
          <div class="flex flex-col text-center">
            <%= link_to link[:cta_url], target: '_blank', class: 'flex' do %>
              <span class="text-sm w-full items-center px-4 py-3 border border-transparent leading-5 rounded-md font-bold  bg-secondary-200 text-primary-600 hover:bg-secondary-300 focus:outline-none focus:shadow-outline-primary focus:border-secondary-300 active:bg-secondary-300 rounded-md shadow-sm">
              <%= link[:cta_text] %>
              </span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </section>
<% end %>
